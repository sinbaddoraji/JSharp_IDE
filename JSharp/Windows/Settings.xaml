<Window x:Class="JSharp.MainWindow.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" Height="162.225" Width="400">
    <Grid>
        <Label Content="JDK path:" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="75,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" x:Name="jdkBox" Text="JDK path can not be found" />
        <Button Content="Select Path" HorizontalAlignment="Left" Margin="309,22,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Height="38"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="164,96,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <CheckBox Content="Dark Theme" HorizontalAlignment="Left" Margin="75,66,0,0" VerticalAlignment="Top"  x:Name="darkTheme"/>
    </Grid>
</Window>
